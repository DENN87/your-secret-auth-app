<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <i class="fas fa-key fa-4x"></i>
      <h1 class="display-4">You've Discovered My Secret!</h1>

      <div class="row row-cols-1 row-cols-md-3 g-4">

        <% usersWithSecrets.forEach((user)=> { %>
          <div class="col">
            <div class="card shadow-sm secret-text h-100">
              <p class="card-text">
                <%= user.secret %>
              </p>
            </div>
          </div>
          <% }) %>

      </div>
    </div>
  </div>
  <hr>
  <div class="col-btn-middle">
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>


  <%- include('partials/footer') %>